{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never",
          "js": "never"
        }
      ]
    },
    "overrides": [
      {
        "files": ["*.ts"],
        "rules": {
          "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ts": "never",
              "js": "never"
            }
          ]
        }
      }
    ]
}